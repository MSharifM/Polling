@model Polling.Core.DTOs.User.ShowInformationForUsrePanelViewModel
@{
    ViewData["Title"] = "پنل کاربری";
}

<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset و تنظیمات پایه */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f7fafc;
            color: #2d3748;
            line-height: 1.6;
        }

        a {
            text-decoration: none;
        }

        /* استایل کلی پنل */
        .user-panel {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        /* هدر پروفایل */
        .profile-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            border-radius: 0.5rem 0.5rem 0 0;
            padding: 2rem;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            position: relative;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 4px solid rgba(255, 255, 255, 0.8);
            object-fit: cover;
            margin-bottom: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .edit-avatar-btn {
            position: absolute;
            bottom: 1.5rem;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }

        .profile-info h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .profile-info p {
            opacity: 0.9;
            font-size: 0.9rem;
        }

        /* بخش تنظیمات */
        .settings-section {
            background: white;
            border-radius: 0 0 0.5rem 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        }

        .settings-title {
            padding: 1rem 1.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-bottom: 1px solid #e2e8f0;
        }

        /* آیتم‌های تنظیمات */
        .settings-item {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #edf2f7;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .settings-item:hover {
                background-color: #f8fafc;
            }

            .settings-item:last-child {
                border-bottom: none;
            }

        .item-icon {
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 1rem;
        }

            .item-icon.blue {
                background-color: #ebf4ff;
                color: #4f46e5;
            }

            .item-icon.green {
                background-color: #f0fff4;
                color: #38a169;
            }

            .item-icon.purple {
                background-color: #faf5ff;
                color: #9f7aea;
            }

            .item-icon.orange {
                background-color: #fffaf0;
                color: #ed8936;
            }

            .item-icon.red {
                background-color: #fff5f5;
                color: #f56565;
            }

        .item-content {
            flex: 1;
        }

            .item-content h3 {
                font-size: 1rem;
                font-weight: 500;
            }

        .item-arrow {
            color: #a0aec0;
        }

        /* آیتم خروج */
        .logout-item {
            color: #e53e3e;
        }

            .logout-item:hover {
                background-color: #fff5f5;
            }

        /* رسپانسیو */
        @@media (min-width: 768px) {
            .profile-header {
                flex-direction: row;
                text-align: right;
                align-items: center;
                padding: 2rem 3rem;
            }

            .profile-avatar {
                margin-bottom: 0;
                margin-left: 2rem;
            }

            .edit-avatar-btn {
                left: auto;
                right: 2rem;
                transform: none;
                bottom: -1rem;
            }
        }
    </style>
</head>
<body>
    <div class="user-panel">
        <!-- هدر پروفایل -->
        <div class="profile-header">
            <img src="/UserAvatar/@Model.UserAvatar" alt="عکس پروفایل" class="profile-avatar">

            <div class="edit-avatar-btn" onclick="editAvatar()">
                <a href="/UserPanel/EditAvatar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#4f46e5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                    </svg>
                </a>
            </div>
            <div class="profile-info">
                <h1>@Model.Name</h1>
                <p>@Model.Email</p>
                <p>@Model.Phone</p>
            </div>
        </div>

        <!-- بخش تنظیمات -->
        <div class="settings-section">
            <div class="settings-title">تنظیمات حساب کاربری</div>

            <!-- تغییر رمز عبور -->
            <a href="/UserPanel/ChangePassword" class="settings-item">
                <div class="item-icon green">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <div class="item-content">
                    <h3>تغییر رمز عبور</h3>
                </div>
                <div class="item-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </div>
            </a>

            <!-- تغییر ایمیل -->
            <a href="/UserPanel/ChangeEmail" class="settings-item">
                <div class="item-icon purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                </div>
                <div class="item-content">
                    <h3>تغییر آدرس ایمیل</h3>
                </div>
                <div class="item-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </div>
            </a>

            <!-- تغییر شماره موبایل -->
            <a href="/UserPanel/ChangePhone" class="settings-item">
                <div class="item-icon orange">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                    </svg>
                </div>
                <div class="item-content">
                    <h3>تغییر شماره موبایل</h3>
                </div>
                <div class="item-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </div>
            </a>

            <!-- خروج از حساب -->
            <a href="/Logout" class="settings-item logout-item">
                <div class="item-icon red">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                </div>
                <div class="item-content">
                    <h3>خروج از حساب کاربری</h3>
                </div>
                <div class="item-arrow">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                </div>
            </a>
        </div>
    </div>

    <script>
        function editAvatar() {
            // کدهای ویرایش عکس پروفایل
            console.log('ویرایش عکس پروفایل');
