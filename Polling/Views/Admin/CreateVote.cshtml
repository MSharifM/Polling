@model Polling.Core.DTOs.Vote.CreateVoteViewModel
@{
    ViewData["Title"] = "ایجاد نظرسنجی جدید";
}

<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset و تنظیمات پایه */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f7fafc;
            color: #2d3748;
            line-height: 1.6;
        }

        /* استایل کلی فرم */
        .create-vote-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .vote-card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .vote-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 1.5rem;
            color: white;
            text-align: center;
        }

            .vote-header h1 {
                font-size: 1.5rem;
                font-weight: 600;
            }

        /* بخش اصلی فرم */
        .vote-form {
            padding: 1.5rem;
        }

        /* فیلدهای فرم */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #4a5568;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            background-color: #fff;
            transition: border-color 0.2s;
        }

            .form-control:focus {
                outline: none;
                border-color: #a5b4fc;
                box-shadow: 0 0 0 3px rgba(165, 180, 252, 0.3);
            }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .text-danger {
            color: #e53e3e;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* چک باکس و رادیو */
        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .form-check-input {
            margin-left: 0.5rem;
        }

        .form-check-label {
            cursor: pointer;
            padding-right : 30px;
        }

        /* دکمه‌های فرم */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #4f46e5;
            color: white;
        }

            .btn-primary:hover {
                background-color: #4338ca;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #4a5568;
        }

            .btn-secondary:hover {
                background-color: #cbd5e0;
            }

        /* رسپانسیو */
        @@media (min-width: 768px) {
            .vote-form {
                padding: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="create-vote-container">
        @{
            List<SelectListItem> groups = ViewData["selectGroups"] as List<SelectListItem>;
        }
        <form asp-action="CreateVote" method="post" class="vote-card">
            <!-- هدر فرم -->
            <div class="vote-header">
                <h1>ایجاد نظرسنجی جدید</h1>
            </div>

            <!-- بخش اصلی فرم -->
            <div class="vote-form">
                <!-- نمایش خطاهای کلی -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- عنوان نظرسنجی -->
                <div class="form-group">
                    <label asp-for="Title" class="form-label">عنوان نظرسنجی *</label>
                    <input asp-for="Title" class="form-control" placeholder="عنوان نظرسنجی را وارد کنید">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- متن نظرسنجی -->
                <div class="form-group">
                    <label asp-for="Text" class="form-label">توضیحات نظرسنجی *</label>
                    <textarea asp-for="Text" class="form-control" placeholder="توضیحات کامل نظرسنجی را وارد کنید"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>

                <!-- تنظیمات نظرسنجی -->
                <div class="form-group">
                    <label class="form-label">تنظیمات نظرسنجی</label>

                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input">
                        <label asp-for="IsActive" class="form-check-label">نظرسنجی فعال باشد</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="AllowMultipleSelection" class="form-check-input">
                        <label asp-for="AllowMultipleSelection" class="form-check-label">امکان انتخاب چند گزینه وجود دارد</label>
                    </div>
                </div>

                <!-- گروه‌های انتخابی -->
                <div class="form-group">

                    <label class="form-label">گروه‌های هدف</label>
                    @if (groups != null && groups.Any())
                    {
                        @foreach (var group in groups)
                        {
                            <div class="form-check">
                                <input type="checkbox" name="selectedGroup" value="@group.Value" id="group-@group.Value" class="form-check-input">
                                <label for="group-@group.Value" class="form-check-label">@group.Text</label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-gray-500">گروهی برای انتخاب وجود ندارد</p>
                    }
                </div>

                <!-- دکمه‌های فرم -->
                <div class="form-actions">
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">انصراف</a>
                    <button type="submit" class="btn btn-primary">ایجاد نظرسنجی و افزودن گزینه‌ها</button>
                </div>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>