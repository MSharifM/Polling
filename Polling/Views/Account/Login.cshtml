@model Polling.Core.DTOs.User.LoginViewModel

@{
    ViewData["Title"] = "ورود به سایت";
}

<h2 class="text-center mb-4">ورود به سایت</h2>
@if (ViewBag.Error != null)
{
    <span class="text-danger">@ViewBag.Error</span>
}
@if (ViewBag.IsAuthenticated == null)
{
    <form asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post" class="login-form" style="max-width: 400px; margin: auto;">

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="StudentCode"></label>
            <input asp-for="StudentCode" class="form-control" placeholder="شماره دانشجویی خود را وارد کنید" />
            <span asp-validation-for="StudentCode" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور خود را وارد کنید" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100">ورود</button>

        <div class="mt-3 d-flex justify-content-between">
            <a asp-action="ForgotPassword" asp-controller="Account">فراموشی رمز عبور؟</a>
            <a asp-action="Register" asp-controller="Account">ثبت نام</a>
        </div>
    </form>
}else
{
    <div>
        <p class="alert">شما وارد حساب @User.Identity.Name شده اید.</p>
        <a class="link-warning" href="/logout">برای خروج اینجا کلیک کنید</a>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
