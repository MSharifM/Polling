@model Polling.Core.DTOs.User.RegisterViewModel

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>فرم ثبت نام</title>
    <style>
        /* تنظیمات پایه */
        * {
        box-sizing: border-box;
        font-family: 'Vazir', Tahoma, sans-serif;
        }

        body {
        background: #f0f4f8;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        direction: rtl;
        }

        .signup-container {
        background: #ffffff;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        max-width: 400px;
        width: 100%;
        transition: box-shadow 0.3s ease;
        }

        .signup-container:hover {
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        }

        h2 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
        }

        form {
        display: flex;
        flex-direction: column;
        }

        label {
        margin-bottom: 6px;
        font-weight: 600;
        color: #555;
        font-size: 14px;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="password"] {
        padding: 12px 15px;
        margin-bottom: 20px;
        border: 1.8px solid #ccc;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.3s ease;
        outline: none;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="tel"]:focus,
        input[type="password"]:focus {
        border-color: #4a90e2;
        box-shadow: 0 0 6px #4a90e2aa;
        }

        button {
        background-color: #4a90e2;
        color: white;
        padding: 14px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        }

        button:hover {
        background-color: #357ABD;
        }
        /* ریسپانسیو */

        .signup-container {
        padding: 25px 20px;
        max-width: 100%;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="password"] {
        font-size: 14px;
        padding: 10px 12px;
        }

        button {
        font-size: 15px;
        padding: 12px;
        }

        }
    </style>
</head>
<body>
    <div class="signup-container">
        <h2>ثبت نام در سایت نظر سنجی</h2>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <label asp-for="FullName"></label>
            <input asp-for="FullName" type="text" id="username" name="Fullname" placeholder="نام کاربری خود را وارد کنید" />
            <span asp-validation-for="FullName" class="text-danger"></span>

            <label asp-for="StudentCode"></label>
            <input asp-for="StudentCode" type="text" id="username" name="StudentCode" placeholder="شماره دانشجویی  خود را وارد کنید" />
            <span asp-validation-for="StudentCode" class="text-danger"></span>

            <label asp-for="Email"></label>
            <input asp-for="Email" name="Email" placeholder="example@mail.com" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Phone"></label>
            <input asp-for="Phone" type="tel" id="phone" placeholder="09xxxxxxxxx" pattern="09\d{9}" title="شماره موبایل باید با 09 شروع و 11 رقم باشد" />
            <span asp-validation-for="Phone" class="text-danger"></span>

            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" id="password" name="Password" placeholder="رمز خود را وارد کنید" minlength="6" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <label asp-for="RePassword"></label>
            <input asp-for="RePassword" type="password" id="confirm-password" name="RePassword" placeholder="رمز را دوباره وارد کنید" minlength="6" required />
            <span asp-validation-for="RePassword" class="text-danger"></span>

            <p style="text-align:center; margin-top: 15px;">
                <a href="/Login" style="color:#4a90e2; text-decoration:none; font-weight:bold;">ورود به سایت</a>
            </p>

            <button type="submit">ثبت نام</button>
        </form>
    </div>

</body>

</html>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }