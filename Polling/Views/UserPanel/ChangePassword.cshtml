@model Polling.Core.DTOs.User.ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<!DOCTYPE html>
<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset و تنظیمات پایه */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f7fafc;
            color: #2d3748;
            line-height: 1.6;
        }

        /* استایل کلی فرم */
        .change-password-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .password-card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .password-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 1.5rem;
            color: white;
            text-align: center;
        }

            .password-header h1 {
                font-size: 1.5rem;
                font-weight: 600;
            }

        /* بخش اصلی فرم */
        .password-form {
            padding: 1.5rem;
        }

        /* فیلدهای فرم */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #4a5568;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            background-color: #fff;
            transition: border-color 0.2s;
        }

            .form-control:focus {
                outline: none;
                border-color: #a5b4fc;
                box-shadow: 0 0 0 3px rgba(165, 180, 252, 0.3);
            }

        .text-danger {
            color: #e53e3e;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        /* دکمه‌های فرم */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #4f46e5;
            color: white;
        }

            .btn-primary:hover {
                background-color: #4338ca;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #4a5568;
        }

            .btn-secondary:hover {
                background-color: #cbd5e0;
            }

        /* قدرت رمز عبور */
        .password-strength {
            margin-top: 0.5rem;
            height: 4px;
            background-color: #e2e8f0;
            border-radius: 2px;
            overflow: hidden;
        }

        .strength-meter {
            height: 100%;
            width: 0;
            transition: width 0.3s, background-color 0.3s;
        }

        /* رسپانسیو */
        @@media (min-width: 768px) {
            .password-form

        {
            padding: 2rem;
        }

        }
    </style>
</head>
<body>
    <div class="change-password-container">
        <form asp-action="ChangePassword" method="post" class="password-card">
            <!-- هدر فرم -->
            <div class="password-header">
                <h1>تغییر رمز عبور</h1>
            </div>

            <!-- بخش اصلی فرم -->
            <div class="password-form">
                <!-- نمایش خطاهای کلی -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- رمز عبور فعلی -->
                <div class="form-group">
                    <label asp-for="OldPassword" class="form-label">رمز عبور فعلی</label>
                    <input asp-for="OldPassword" type="password" class="form-control" autocomplete="current-password">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>

                <!-- رمز عبور جدید -->
                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label">رمز عبور جدید</label>
                    <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" id="newPassword">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="password-strength">
                        <div class="strength-meter" id="strengthMeter"></div>
                    </div>
                </div>

                <!-- تکرار رمز عبور جدید -->
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">تکرار رمز عبور جدید</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- دکمه‌های فرم -->
                <div class="form-actions">
                    <a asp-action="Index" asp-controller="UserPanel" class="btn btn-secondary">انصراف</a>
                    <button type="submit" class="btn btn-primary">تغییر رمز عبور</button>
                </div>
            </div>
        </form>
    </div>

    @section Scripts
    {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    

</body>
</html>