@model Polling.Core.DTOs.User.EditAvatarViewModel

@{
    ViewData["Title"] = "ویرایش پروفایل";
}

<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset و تنظیمات پایه */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f7fafc;
            color: #2d3748;
            line-height: 1.6;
        }

        /* استایل کلی فرم */
        .edit-profile-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .profile-card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            padding: 1.5rem;
            color: white;
            text-align: center;
        }

            .profile-header h1 {
                font-size: 1.5rem;
                font-weight: 600;
            }

        /* بخش اصلی فرم */
        .profile-form {
            padding: 1.5rem;
        }

        /* آپلود عکس پروفایل */
        .avatar-upload {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 2rem;
        }

        .avatar-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            border: 4px solid #e2e8f0;
            object-fit: cover;
            margin-bottom: 1rem;
            position: relative;
            overflow: hidden;
        }

        .avatar-upload-btn {
            background-color: #4f46e5;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            transition: background-color 0.2s;
        }

            .avatar-upload-btn:hover {
                background-color: #4338ca;
            }

            .avatar-upload-btn svg {
                margin-left: 0.5rem;
            }

        #avatarInput {
            display: none;
        }

        /* فیلدهای فرم */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #4a5568;
        }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 0.375rem;
            background-color: #fff;
            transition: border-color 0.2s;
        }

            .form-control:focus {
                outline: none;
                border-color: #a5b4fc;
                box-shadow: 0 0 0 3px rgba(165, 180, 252, 0.3);
            }

            .form-control[readonly] {
                background-color: #f7fafc;
                color: #718096;
                cursor: not-allowed;
            }

        /* دکمه‌های فرم */
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background-color: #4f46e5;
            color: white;
        }

            .btn-primary:hover {
                background-color: #4338ca;
            }

        .btn-secondary {
            background-color: #e2e8f0;
            color: #4a5568;
        }

            .btn-secondary:hover {
                background-color: #cbd5e0;
            }

        /* رسپانسیو */
        @@media (min-width: 768px) {
            .profile-form

        {
            padding: 2rem;
        }

        .avatar-upload {
            flex-direction: row;
            align-items: flex-start;
            justify-content: flex-start;
        }

        .avatar-preview {
            margin-right: 2rem;
            margin-bottom: 0;
        }

        }
    </style>
</head>
<body>
    <div class="edit-profile-container">
        <form asp-action="EditAvatar" method="post" enctype="multipart/form-data" class="profile-card">
            <!-- هدر فرم -->
            <div class="profile-header">
                <h1>ویرایش پروفایل کاربری</h1>
            </div>

            <!-- بخش اصلی فرم -->
            <div class="profile-form">
                <!-- آپلود عکس پروفایل -->
                <div class="avatar-upload">
                    <div>
                        <img id="avatarPreview" src="/UserAvatar/@Model.AvatarName" alt="عکس پروفایل" class="avatar-preview">
                    </div>
                    <br />
                    <div>
                        <input asp-for ="Avatar" type="file" id="avatarInput" accept="image/*">
                        <input type="hidden" asp-for="AvatarName" />
                        <label for="avatarInput" class="avatar-upload-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                <polyline points="17 8 12 3 7 8"></polyline>
                                <line x1="12" y1="3" x2="12" y2="15"></line>
                            </svg>
                            تغییر عکس پروفایل
                        </label>
                        <p class="text-gray-500 mt-2">فقط فایل‌های JPG, PNG یا GIF با حداکثر سایز 5MB</p>
                    </div>
                </div>

                <!-- اطلاعات کاربر (فقط خواندنی) -->
                <div class="form-group">
                    <label for="fullName" class="form-label">نام</label>
                    <input type="text" id="fullName" class="form-control" value="@Model.Name" readonly>
                    <input type="hidden" asp-for="Name" />
                </div>

                <div class="form-group">
                    <label for="studentId" class="form-label">کد دانشجویی</label>
                    <input type="text" id="studentId" class="form-control" value="@Model.StudentCode" readonly>
                    <input type="hidden" asp-for="StudentCode" />
                </div>

                <div class="form-group">
                    <label for="joinDate" class="form-label">تاریخ عضویت</label>
                    <input type="text" id="joinDate" class="form-control" value="@Model.CreateDate" readonly>
                    <input type="hidden" asp-for="CreateDate" />
                </div>

                <!-- دکمه‌های فرم -->
                <div class="form-actions">
                    <a href="/UserPanel" class="btn btn-secondary">انصراف</a>
                    <button type="submit" class="btn btn-primary">ذخیره تغییرات</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // نمایش پیش‌نمایش عکس پس از انتخاب
        document.getElementById('avatarInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('avatarPreview').src = event.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // اعتبارسنجی سایز فایل
        document.querySelector('form').addEventListener('submit', function(e) {
            const fileInput = document.getElementById('avatarInput');
            if (fileInput.files.length > 0) {
                const fileSize = fileInput.files[0].size / 1024 / 1024; // MB
                if (fileSize > 5) {
                    e.preventDefault();
                    alert('حجم فایل باید کمتر از 5MB باشد');
                }
            }
        });
    </script>
</body>
</html>